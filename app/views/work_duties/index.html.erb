<p id="notice"><%= notice %></p>

<h1>Listing Work Duties</h1>

<table>
  <thead>
    <tr>
      <th>Work</th>
      <th>Task</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @work_duties.each do |work_duty| %>
      <tr>
        <td><%= work_duty.work_id %></td>
        <td><%= work_duty.task %></td>
        <td><%= work_duty.description %></td>
        <td><%= link_to 'Show', work_duty %></td>
        <td><%= link_to 'Edit', edit_work_duty_path(work_duty) %></td>
        <td><%= link_to 'Destroy', work_duty, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

