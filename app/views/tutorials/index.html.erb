<div class="custom-ym-wrapper">
  <div class="ym-wbox">   
    <main>
      <div class="ym-column linearize-level-1 ">
        <div class="ym-col1">
          <section class="box info">
            <p id="notice"><%= notice %></p>

            <h1>Tutorials</h1>

            <table>
              <thead>
                <tr>
                  <th>Topic</th>
                  <th>Category</th>
                  <th>Description</th>
                  <!--<th>Publish date</th>
                  <th colspan="3"></th>-->
                </tr>
              </thead>

              <tbody>
                <% @tutorials.each do |tutorial| %>
                  <tr>
                    <td><%= link_to tutorial.topic, tutorial %></td>
                    <td><%= tutorial.category %></td>
                    <td><%= link_to tutorial.description, tutorial %></td>
                    <!--<td><%#= tutorial.publish_date %></td>
                    <td><%#= link_to 'Show', tutorial %></td>
                    <td><%#= link_to 'Edit', edit_tutorial_path(tutorial) %></td>
                    <td><%#= link_to 'Destroy', tutorial, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
                  </tr>
                <% end %>
              </tbody>
            </table>

            <br>

            <%#= link_to 'New Tutorial', new_tutorial_path %>


            </section>
        </div>
        
      </div>
    </main>   
  </div>
</div>


